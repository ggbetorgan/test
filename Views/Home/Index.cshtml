    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox" >
        <div class="item active" >
            <img src="https://kim-met.ru/attachments/Image/9_2.jpg?template=generic" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Добро Пожаловать!!! 
                </p>
            </div>
        </div>
        <div class="item">
            <img src="https://kim-met.ru/attachments/Image/9_2.jpg?template=generic" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Не знаешь где нас найти? Странно, но если что узнать можно 
                    <a class="btn btn-default" href="https://localhost:5001/Home/Contact">
                        Туть
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="https://kim-met.ru/attachments/Image/9_2.jpg?template=generic" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    О нашей многовековой истории можно узнать нажав на
                    <a class="btn btn-default" href="https://localhost:5001/Home/About">
                        эту кнопку
                    </a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Назад</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Вперед</span>
    </a>
</div>
